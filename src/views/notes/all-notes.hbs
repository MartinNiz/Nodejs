<div class="container">
  <div class="row">
    {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title d-flex justify-content-between align-items-center">
            {{title}}
            <div>
              <a class="text-decoration-none m-2" href="/notes/edit/{{_id}}">
                <i class="fas fa-edit"></i> 
              </a>
              <a class="text-decoration-none" href="#">
                <i class="fas fa-trash"></i>
              </a>
            </div>

          </h4>
        </div>
        <div class="card-body">
          <p>
            {{description}}
          </p>
        </div>
      </div>
    </div>
    {{else}}
    <div class="card mx-auto" style="width: 16rem;">
      <div class="card-body">
        <p class="text-center font-weight-bold fs-3 fw-normal">There are not notes yet.</p>
        <a href="/notes/add" class="btn btn-success w-100">Add one</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>